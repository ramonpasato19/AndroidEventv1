<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>
    </style>

    <style name="label">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color_green</item>

    </style>

    <style name="text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color_gray_dk</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="edit">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_color_gray_lt</item>
    </style>

    <style name="boton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/main_color_green</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:colorBackground">@color/main_color_green</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
