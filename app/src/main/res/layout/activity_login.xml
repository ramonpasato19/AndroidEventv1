<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.androideventv1.LoginActivity"
    android:background="@drawable/tres">


    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRegistrar"
        android:layout_alignStart="@+id/btnRegistrar"
        android:background="@drawable/redondo"
        android:paddingVertical="10dp"
        android:text="Ingresar"
        android:textStyle="bold"
        tools:paddingHorizontal="10dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtCorreoLogin"
        android:layout_marginTop="24dp"
        android:text="Login"
        android:textSize="@dimen/pad_50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtCorreoLogin"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="26dp"
        android:text="Correo: "
        android:textSize="@dimen/pad_30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtPasswordLogin"
        android:layout_below="@+id/txtCorreoLogin"
        android:layout_marginTop="16dp"
        android:text="Password:"
        android:textSize="@dimen/pad_30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnIngresar"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/txtCorreoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnIngresar"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/redondo"
        android:text="CREAR NUEVO"
        android:textStyle="bold" />

</RelativeLayout>
